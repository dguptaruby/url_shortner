<h3>Shorten URL:</h3>
<%= form_with model: @link, local: true, class: 'mb-2' do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@link.errors.count, "error") %> prohibited
        this link from being shortened:
      </h2>
      <ul>
        <% @link.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :url, class: 'form-control mb-2' %>
  <%= f.submit 'Create Short URL',class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
